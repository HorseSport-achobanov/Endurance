@model Endurance.Web.Trial.ViewModels.TrialRiderViewModel

@{
    var clubOptionsViewData = new { Options = Model.ClubOptions };
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <form asp-controller="Riders"
              asp-action="Create"
              method="post">

            @Html.EditorFor(m => m.FirstName)
            
            @Html.EditorFor(m => m.LastName)
            
            @Html.EditorFor(m => m.ClubId, clubOptionsViewData)

            <input type="submit" class="btn btn-primary" value="Create" />

        </form>
    </div>
</div>
