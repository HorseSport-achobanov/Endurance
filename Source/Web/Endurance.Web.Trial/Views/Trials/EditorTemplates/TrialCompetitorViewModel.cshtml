@model Endurance.Web.Trial.ViewModels.Trial.TrialCompetitorViewModel

@{
    var riderName = Model.Rider.FirstName + Model.Rider.LastName;
}

<div class="row">
    <div class="competitor-container">
        <div class="col-md-2 head">
            <p>Number: @Model.Number</p>
            <p>Rider: @riderName</p>
            <p>Horse: @Model.Horse.Name</p>
        </div>

        <div class="col-md-6 rounds">
            @Html.EditorFor(m => m.Performances)
        </div>

        <div class="col-md-4 stats">
            @Html.DisplayFor(m => m.TotalAvarageSpeedForEachRound)
        </div>
    </div>
</div>